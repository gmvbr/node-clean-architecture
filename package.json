{
  "name": "node-clean-architecture",
  "version": "1.0.0",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "ts-start": "ts-node src/index.ts",
    "watch": "nodemon",
    "test": "jest --coverage",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc -p tsconfig-build.json",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmvbr/node-clean-architecture.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gmvbr/node-clean-architecture/issues"
  },
  "nodemonConfig": {
    "ignore": [
      "build/*",
      "src/**/*.spec.ts"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "exec": "ts-node ./src/index.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/gts/",
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "no-process-exit": "off"
    }
  },
  "prettier": "gts/.prettierrc.json",
  "homepage": "https://github.com/gmvbr/node-clean-architecture#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.11.2",
    "@types/pino": "^6.3.6",
    "gts": "^3.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "fastify": "^3.14.0",
    "pino": "^6.11.2",
    "pino-colada": "^2.1.0"
  }
}
